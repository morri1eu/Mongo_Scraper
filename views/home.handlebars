<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Mongo Scraper</h1>
    <p class="lead">Scrape the New York Times for articles.</p>
  </div>
</div>
{{#each Articles}}
    <div class="container">
        <a href="{{this.link}}"><div class="row">
            <div class="col-md-10">
            <h3>{{this.title}}</h3></div></a>
            {{#if saved}}
                <button id="{{this._id}}" style="float:right" type="button" class="col-md-2 btn btn-danger">Remove from Saved</button>
            {{else}}
                <button id="{{this._id}}" style="float:right" type="button" class="col-md-2 btn btn-success">Save this Article</button>
            {{/if}}
        </div>
        <a href="{{this.link}}"><div class="row">
            <p>{{this.summary}}</p>
        </div>
        </a>
    </div>
{{/each}}